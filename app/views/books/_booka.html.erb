
		<h2 span class='header'>	Title & Price</span h2>

      <table class="booka">
  
          <% @books.each do |book| %>
          <tr id="book_<%= book.id %>">
            <td class="title"><%= book.title %>
            <td class="price"><%= book.price %>

              <%= link_to_remote "Delete Book", 
                                  :url => book_path(book),
                                  :confirm  => "Are you sure you want to delete this book?",
                                  :method     => "delete"  %>        

              </td>
          </tr>
          <% end %>
      </table>

