<div class='book'>
  <div class="book_heading">
		<h2 span class='header'>	Title & Price</span h2>
		<span class="paginate">
		</span>
	</div>
	<% @books.each do |book|%>
  <div class='small_book'>
		<div class='small_book_cover'>
			<%#= image_tag book.cover_picture%>
		</div>
		<div class='book_title'>
			  <%=h book.title %>
		</div>
		<div class='book_author'>
			<%#=h authors.author_last_name%>
			<%#=h  @last_name%>
		</div>
		<div class='book_price'>
			  <%=h book.price %>
   <div class='book_character'>
		</div>
	</div>
	<% end %>
     <div class= 'float_fix'>&nbsp;
  </div>
</div>




